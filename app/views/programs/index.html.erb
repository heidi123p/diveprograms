<h1>Listing programs</h1>

<table>
  <thead>
    <tr>
      <th>Program description</th>
      <th>Minimum level</th>
      <th>Cost</th>
      <th>Minimum length</th>
      <th>Website</th>
      <th>Gear</th>
      <th>Accomodation included</th>
      <th>Shop</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.program_description %></td>
        <td><%= program.minimum_level %></td>
        <td><%= program.cost %></td>
        <td><%= program.minimum_length %></td>
        <td><%= program.website %></td>
        <td><%= program.gear %></td>
        <td><%= program.accomodation_included %></td>
        <td><%= program.shop_id %></td>
        <td><%= link_to 'Show', program %></td>
        <td><%= link_to 'Edit', edit_program_path(program) %></td>
        <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

